module f17.paper.Sec3;


explicit global protocol Travel(role C, role A, role S)
{
	connect C to A;
	rec TravelAgency
	{
		choice at C
		{
			query() from C to A;
			quote() from A to C;
			continue TravelAgency;
		}
		or
		{
			pay() connect C to S;
			confirm() from S to C;
			accpt() from C to A;
		}
		or
		{
			reject() from C to A;
		}
	}
}







